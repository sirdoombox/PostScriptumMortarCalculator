<UserControl x:Class="PostScriptumMortarCalculator.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PostScriptumMortarCalculator.Views"
             xmlns:viewModels="clr-namespace:PostScriptumMortarCalculator.ViewModels"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:CalculatorViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <Thickness x:Key="ControlMargin" Top="10"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10 0 10 0" VerticalAlignment="Center">
            <TextBox mah:TextBoxHelper.Watermark="Mortar Position X | Y" 
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     IsReadOnly="True">
                <TextBox.Text>
                    <MultiBinding StringFormat="{}{0}m | {1}m" Mode="OneWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding Path="Model.MapModel.MortarPositionMeters.X"/>
                        <Binding Path="Model.MapModel.MortarPositionMeters.Y"/>
                    </MultiBinding>
                </TextBox.Text>
            </TextBox>
            <TextBox mah:TextBoxHelper.Watermark="Target Position X | Y" 
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     IsReadOnly="True">
                <TextBox.Text>
                    <MultiBinding StringFormat="{}{0}m | {1}m" Mode="OneWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding Path="Model.MapModel.TargetPositionMeters.X"/>
                        <Binding Path="Model.MapModel.TargetPositionMeters.Y"/>
                    </MultiBinding>
                </TextBox.Text>
            </TextBox>
            <TextBox mah:TextBoxHelper.Watermark="Distance To Target" 
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     Text="{Binding Model.MapModel.Distance, StringFormat={}{0}m, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True"/>
            <TextBox mah:TextBoxHelper.Watermark="Angle To Target" 
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     Text="{Binding Model.MapModel.Angle, StringFormat={}{0}Â°, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True"/>
        </StackPanel>
        <ContentControl Grid.Column="1" s:View.Model="{Binding ActiveItem}"/>
    </Grid>
</UserControl>